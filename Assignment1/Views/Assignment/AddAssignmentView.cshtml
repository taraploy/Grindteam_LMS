
@model IEnumerable<Assignment1.Cours>

@{
    ViewBag.Title = "AddAssignmentView";
    Layout = "~/Views/Layout_MainLogin.cshtml";
}

@*@using Assignment1.Models*@
<h2>AddAssignmentView</h2>

<div class="nav-pageview">
    <nav class="navbar navbar-dark">
        <span class="navbar-brand mb-0 h1"><img src="~/Images/GDS_LOGO.png" id="gds_title" /></span>
    </nav>
</div>
<div class="row">
    <aside class="col-2 left-nav float-left">
        <p>
            <ul class="dashboard-nav">
                <li><h5 class="nav_title">@Html.ActionLink("Home", "ReturnToView", "UserAccount")</h5></li>

                <li><h5 class="nav_title">@Html.ActionLink("Courses", "InstructorCview", "CoursesAndRegistration")</h5></li>

                <li><h5 class="nav_title">@Html.ActionLink("Calendar", "Index", "Calendar")</h5></li>

                <li><h5 class="nav_title">@Html.ActionLink("Profile", "Index", "Profile")</h5></li>

                <li><h5 class="nav_title">@Html.ActionLink("Assignments", "InstructorAssignment", "Assignment")</h5></li>

                <li><a href="#"><h5 class="nav_title">Dummy 1</h5></a></li>

                <li><a href="#"><h5 class="nav_title">Dummy 2</h5></a></li>

                <li><a href="#"><h5 class="nav_title">Dummy 3</h5></a></li>
            </ul>
        </p>
    </aside>
    <div class="vl"></div>
    <div class="container">
        <form action="@Url.Action("SaveAssignment", "Assignment")" method="post" @*enctype="multipart/form-data"*@>
            <div class="course-form">
                <h2><strong>Add Assignment</strong></h2>
                <hr />
                @*Assignment Information*@
                <div class="form-group">
                    <label for="course-num"><strong>Course Number:</strong></label>
                    <select id="course-num" name="courseNum">
                        @{ var getlist = ViewBag.courseList as IEnumerable<Assignment1.Cours>; }
                        @foreach (var item in getlist.Skip(1)) {
                            <option>@item.course_num</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label for="assignment-name"><strong>Assignment Name:</strong></label>
                    <input id="assignment-name" name="assignmentName" type="text" />
                </div>
                <div class="form-group">
                    <label for="assignment-desc"><strong>Assignment Description:</strong></label>
                    <textarea id="assignment-desc" name="assignmentDesc" rows="3" cols="50" class="form-control"></textarea>
                </div>
                <div class="form-group">
                    <label for="max-points"><strong>Maximum Points:</strong></label>
                    <input id="max-points" name="maxPoints" type="number" min="0" max="100" />
                </div>
                <div class="form-group">
                    <label for="due-date"><strong>Due Date:</strong></label>
                    <input id="due-date" name="dueDate" type="datetime-local" />
                </div>
                <div class="form-group">
                    @*Assignment Type*@
                    <label for="assignment-type"><strong>Assignment Type:</strong></label>
                    <select name="assignment-type" id="assignment-type">
                        <option value="1">Quiz</option>
                        <option value="2">Test</option>
                        <option value="3">Project</option>
                        <option value="4">Homework</option>
                        <option value="5">Participation</option>
                        <option value="6">Presentation</option>
                        <option value="7">Discussion</option>
                    </select>
                </div>

                <div>
                    <button type="submit" class="" id="save-button" value="Add Assignment">Add Assignment</button>
                    @Html.ActionLink("Cancel", "InstructorAssignment", "Assignment", new { @class = "addCourseBtn" })

                </div>
            </div>
        </form>
    </div>
</div>
