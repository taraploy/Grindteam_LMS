
@{
    ViewBag.Title = "AddCourseView";
    Layout = "~/Views/Layout_MainLogin.cshtml";
}

@model Assignment1.Models.Course
<div class="nav-pageview">
    <nav class="navbar navbar-dark">
        <span class="navbar-brand mb-0 h1"><img src="~/Images/GDS_LOGO.png" id="gds_title" /></span>
    </nav>
</div>
<div class="dashboard">
    <div class="row">
        <aside class="col-2 left-nav float-left">
            <p>
                <ul class="dashboard-nav">
                    <li><h5 class="nav_title">@Html.ActionLink("Home", "ReturnToView", "UserAccount")</h5></li>

                    <li><h5 class="nav_title">@Html.ActionLink("Courses", "InstructorCview", "CoursesAndRegistration")</h5></li>

                    <li><h5 class="nav_title">@Html.ActionLink("Calendar", "Index", "Calendar")</h5></li>

                    <li><h5 class="nav_title">@Html.ActionLink("Profile", "Index", "Profile")</h5></li>

                    <li><h5 class="nav_title">@Html.ActionLink("Assignments", "CourseAssignmentList", "Assignment")</h5></li>
                </ul>
            </p>
        </aside>
        <div class="vl"></div>
        <div class="col-md-9">
            <div class="container">
                <div class="row align-items-center">                                        
                    <form action="@Url.Action("SaveCourse", "CoursesAndRegistration")" method="post" @*enctype="multipart/form-data"*@>
                        <div class="course-form">
                            <h2><strong>Add Course</strong></h2>
                            <hr />
                            @*Course Information*@
                            <div class="form-group">
                                <label for="course-num"><strong>Course number:</strong></label>
                                <input id="course-num" name="courseNum" type="text" />
                            </div>
                            <div class="form-group">
                                <label for="course-name"><strong>Course name:</strong></label>
                                <input id="course-name" name="courseName" type="text" />
                            </div>
                            <div class="form-group">
                                <label for="course-desc"><strong>Course description:</strong></label>
                                <textarea id="course-desc" name="courseDesc" rows="3" cols="50" class="form-control"></textarea>
                            </div>
                            <div class="form-group">
                                <label for="course-credits"><strong>Number of credits:</strong></label>
                                <input id="course-credits" name="courseCredits" type="number" min="1" max="6" />
                            </div>
                            <div class="form-group">
                                <label for="course-capacity"><strong>Capacity:</strong></label>
                                <input id="course-capacity" name="maxCapacity" type="number" min="0" max="30" />
                            </div>
                            <div class="form-group">

                                <label for="course-location"><strong>Location:</strong></label>
                                <input id="course-location" name="courseLocation" type="text" />
                            </div>
                            <div class="form-group">
                                <label for="course-room"><strong>Room Number:</strong></label>
                                <input id="course-room" name="courseRoom" type="text" />
                            </div>
                            <div class="form-group">
                                @*Department Dropdown*@
                                <label for="departments"><strong>Department:</strong></label>
                                <select name="departments" id="departments">
                                    <option value="1">Comptuer Science</option>
                                    <option value="2">Business and Economics</option>
                                    <option value="3">Education</option>
                                    <option value="4">Dental</option>
                                    <option value="5">Mathematics</option>
                                    <option value="6">Chemistry</option>
                                    <option value="7">Physics</option>
                                    <option value="8">Criminal Justice</option>
                                </select>
                            </div>
                            @*Meeting time*@
                            @*<div class="form-group">*@
                            <label for="meetTime"><strong>Meeting time:</strong></label>
                            <div class="form-group">
                                <div class="form-check">
                                    <input type="checkbox" name="monday" value="M" id="monday" class="form-check-input" />
                                    <label for="monday" class="form-check-label">Monday</label>
                                </div>
                                <div class="form-check">
                                    <input type="checkbox" name="tuesday" value="T" id="tuesday" class="form-check-input" />
                                    <label for="tuesday" class="form-check-label">Tuesday</label>
                                </div>
                                <div class="form-check">
                                    <input type="checkbox" name="wednesday" value="W" id="wednesday" class="form-check-input" />
                                    <label for="wednesday" class="form-check-label">Wednesday</label>
                                </div>
                                <div class="form-check">
                                    <input type="checkbox" name="thursday" value="R" id="thursday" class="form-check-input" />
                                    <label for="thursday" class="form-check-label">Thursday</label>
                                </div>
                                <div class="form-check">
                                    <input type="checkbox" name="friday" value="F" id="friday" class="form-check-input" />
                                    <label for="friday" class="form-check-label">Friday</label>
                                </div>
                            </div>
                            <br />
                        </div>                 
                        <div class="form-group">
                            <label for="startTime"><strong>Start time:</strong></label>
                            <input type="time" id="course-start-time" name="startTime" min="07:00" max="21:00" />

                            <label for="endTime"><strong>End time:</strong></label>
                            <input type="time" id="course-end-time" name="endTime" min="07:00" max="21:00" />
                        </div>
                        
                        <div>
                            <button type="submit" class="saveCourseBtn" id="save-button" value="Add Course">Add Course</button>
                            @*@Html.ActionLink("Add Course", "SaveCourse", "CoursesAndRegistration", new { new Course("course-name" })*@
                            @Html.ActionLink("Cancel", "InstructorCview", "CoursesAndRegistration", new { @class = "addCourseBtn" })

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

